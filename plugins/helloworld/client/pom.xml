<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.mule.galaxy</groupId>
    <artifactId>galaxy-parent</artifactId>
    <version>2.0-M5a-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>galaxy-helloworld-client</artifactId>
  <packaging>jar</packaging>
  <name>Galaxy HelloWorld Plugin Client</name>

  <dependencies>

    <dependency>
      <groupId>org.mule.galaxy</groupId>
      <artifactId>galaxy-gwt-client</artifactId>
      <version>2.0-M5a-SNAPSHOT</version>
      <exclusions>
          <exclusion>
              <groupId>org.mule.galaxy</groupId>
              <artifactId>galaxy-core</artifactId>
          </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-user</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.mule.galaxy</groupId>
      <artifactId>galaxy-testutils</artifactId>
      <version>2.0-M5a-SNAPSHOT</version>
      <scope>test</scope>
    </dependency>

  </dependencies>
    
  <build>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.java</include>
          <include>**/*.xml</include>
          <include>**/*.html</include>
          <include>**/*.css</include>
        </includes>
      </resource>
    </resources>
  </build>
  
  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>com.totsp.gwt</groupId>
            <artifactId>maven-googlewebtoolkit2-plugin</artifactId>
            <version>2.0-beta6</version>
            <configuration>
              <gwtVersion>${gwtVersion}</gwtVersion>
              <runTarget>org.mule.galaxy.helloworld.HelloWorld/HelloWorld.html</runTarget>
              <style>OBF</style>
              <compileTargets>
                <value>org.mule.galaxy.helloworld.HelloWorld</value>
              </compileTargets>
              <extraJvmArgs>-Xss1024k -Xmx1024m -Dgwt.nowarn.legacy.tools</extraJvmArgs>
            </configuration>
            <executions>
              <execution>
                <goals>
                  <goal>setup</goal>
                  <goal>extractGwt</goal>
                  <goal>compile</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>nogwt</id>
    </profile>
  </profiles>
</project>
