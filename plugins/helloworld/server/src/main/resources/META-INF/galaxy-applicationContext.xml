<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">
  
  <bean class="org.mule.galaxy.web.GwtPlugin">
    <property name="name" value="HelloWorld"/>
    <property name="moduleName" value="org.mule.galaxy.helloworld.HelloWorld"/>
    <property name="rootToken" value="helloworld"/>
      <property name="rpcServices">
        <map>
          <entry key="/hello.rpc" value-ref="helloWorldService" />
        </map>
      </property>
  </bean>
  
  <bean id="helloWorldService" class="org.mule.galaxy.helloworld.server.HelloWorldServiceImpl"/>
</beans>