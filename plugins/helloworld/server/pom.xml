<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.mule.galaxy</groupId>
        <artifactId>galaxy-parent</artifactId>
        <version>2.0-M3</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>galaxy-helloworld-server</artifactId>
    <name>Galaxy HelloWorld Plugin Server</name>
    <dependencies>
    
        <dependency>
            <groupId>org.mule.galaxy</groupId>
            <artifactId>galaxy-core</artifactId>
            <version>2.0-M3</version>
        </dependency>
        
        <dependency>
            <groupId>org.mule.galaxy</groupId>
            <artifactId>galaxy-core</artifactId>
            <version>2.0-M3</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.mule.galaxy</groupId>
            <artifactId>galaxy-helloworld-client</artifactId>
            <version>2.0-M3</version>
        </dependency>

    </dependencies>

    <build>
      <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
		<version>2.3</version>
                <executions>
                    <execution>
                        <phase>process-sources</phase>
                        <goals>
                            <!--<goal>copy-resources</goal>-->
                        </goals>
                        <configuration>
                            <outputDirectory>target/classes/galaxy/web/</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/../client/target/galaxy-helloworld-client-${version}</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
      </plugins>
    </build>
</project>
