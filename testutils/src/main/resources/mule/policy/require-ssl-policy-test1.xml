<mule-configuration id="policy-test" version="1.0">

    <global-endpoints>
        <endpoint address="http://localhost:1234/foo" name="fooEndpoint"/>
    </global-endpoints>

    <model name="main">
        <mule-descriptor name="foo" implementation="org.mule.component.simple.EchoComponent">
            <inbound-router>
                <global-endpoint name="fooEndpoint"/>
            </inbound-router>
        </mule-descriptor>
    </model>
</mule-configuration>