<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:aop="http://www.springframework.org/schema/aop"
  xmlns:tx="http://www.springframework.org/schema/tx"
  xmlns:a="http://abdera.apache.org"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
    http://abdera.apache.org http://abdera.apache.org/schemas/abdera-spring.xsd">

  <bean id="sessionFactory" class="org.mule.galaxy.util.JackrabbitSessionFactory">
    <property name="repository" ref="repository"/>
    <property name="credentials">
     <bean class="javax.jcr.SimpleCredentials">
      <constructor-arg value="username"/>
      <!-- create the credentials using a bean factory -->
      <constructor-arg><value type="char[]">password</value></constructor-arg>
     </bean>
    </property>
  </bean>

  <bean id="lifecycleManager" 
        class="org.mule.galaxy.impl.lifecycle.LifecycleManagerImpl" 
        init-method="initialize">
    <property name="phaseLogEntryDao" ref="phaseLogEntryDao"/>
  </bean>

  <bean class="org.mule.galaxy.policy.wsdl.BackwardCompatibilityPolicy"/>
  <bean class="org.mule.galaxy.policy.wsdl.ForwardCompatibilityPolicy"/>
  <bean class="org.mule.galaxy.policy.wsdl.BasicProfilePolicy"/>

  <bean id="repository" class="org.springmodules.jcr.jackrabbit.RepositoryFactoryBean">
    <!-- normal factory beans params -->
    <property name="configuration" value="classpath:/META-INF/jackrabbit-repo.xml"/>
    <property name="homeDir" value="file:./jackrabbit"/>
  </bean>
  
  <bean id="policyManager" parent="txProxyTemplate">
    <property name="target" ref="policyManagerTarget"/>
    <property name="proxyTargetClass" value="true"/>
  </bean>
  
  <bean id="policyManagerTarget" 
        class="org.mule.galaxy.impl.policy.PolicyManagerImpl" init-method="initilaize">
    <property name="jcrTemplate" ref="jcrTemplate" />
  </bean>
  
  <bean id="jcrTemplate" class="org.springmodules.jcr.JcrTemplate">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>
  
  <bean id="registry" parent="txProxyTemplate">
    <property name="target" ref="registryTarget"/>
    <property name="proxyTargetClass" value="true"/>
  </bean>
  
  <bean id="registryTarget" class="org.mule.galaxy.impl.jcr.JcrRegistryImpl"
        init-method="initialize">
    <property name="contentService" ref="contentService" />
    <property name="settings" ref="settings" />
    <property name="sessionFactory" ref="sessionFactory" />
    <property name="commentDao" ref="commentDao" />
    <property name="lifecycleManager" ref="lifecycleManager" />
    <property name="policyManager" ref="policyManager" />
  </bean>
  
  <bean id="userManager" parent="txProxyTemplate">
    <property name="target" ref="userManagerTarget"/>
    <property name="proxyTargetClass" value="true"/>
  </bean>
  
  <bean id="userManagerTarget" class="org.mule.galaxy.impl.jcr.UserManagerImpl"
        init-method="initialize" depends-on="persisterManager">
    <property name="sessionFactory" ref="sessionFactory" />
    <property name="persisterManager" ref="persisterManager" />
  </bean>
    
  <bean id="phaseLogEntryDao" parent="txProxyTemplate">
    <property name="target" ref="phaseLogEntryDaoTarget"/>
    <property name="proxyTargetClass" value="true"/>
  </bean>
  
  <bean id="phaseLogEntryDaoTarget" class="org.mule.galaxy.impl.lifecycle.PhaseLogEntryDaoImpl"
        init-method="initialize" >
    <property name="sessionFactory" ref="sessionFactory" />
    <property name="persisterManager" ref="persisterManager" />
  </bean>
      
  <bean id="commentDao" parent="txProxyTemplate">
    <property name="target" ref="commentDaoTarget"/>
    <property name="proxyTargetClass" value="true"/>
  </bean>
  
  <bean id="commentDaoTarget" class="org.mule.galaxy.impl.jcr.CommentDaoImpl"
        init-method="initialize" >
    <property name="sessionFactory" ref="sessionFactory" />
    <property name="persisterManager" ref="persisterManager" />
  </bean>
  
  <bean id="artifactTypeDao" parent="txProxyTemplate">
    <property name="target" ref="artifactTypeDaoTarget"/>
    <property name="proxyTargetClass" value="true"/>
  </bean>
  
  <bean id="artifactTypeDaoTarget" class="org.mule.galaxy.impl.jcr.ArtifactTypeDao"
    init-method="initialize" >
    <property name="sessionFactory" ref="sessionFactory" />
    <property name="persisterManager" ref="persisterManager" />
  </bean>
  
  <bean id="persisterManager" class="org.mule.galaxy.impl.jcr.onm.PersisterManager">
    <property name="persisters">
      <map>
        <entry key="org.mule.galaxy.lifecycle.Phase">
          <bean class="org.mule.galaxy.impl.lifecycle.PhasePersister">
            <constructor-arg ref="lifecycleManager"/>
          </bean>
        </entry>
        <entry key="org.mule.galaxy.Artifact">
          <bean class="org.mule.galaxy.impl.jcr.ArtifactPersister">
            <constructor-arg ref="registry"/>
          </bean>
        </entry>
      </map>
    </property>
  </bean>
  
  <bean id="settings" class="org.mule.galaxy.impl.SettingsImpl"/>
  
  <bean id="contentService" class="org.mule.galaxy.impl.content.ContentServiceImpl">
    <constructor-arg>
      <list>
        <bean class="org.mule.galaxy.impl.content.XmlDocumentContentHandler"/>
        <bean class="org.mule.galaxy.impl.content.WsdlContentHandler"/>
        <bean class="org.mule.galaxy.impl.content.SchemaContentHandler"/>
      </list>
    </constructor-arg>
  </bean>

  <bean id="viewManager" class="org.mule.galaxy.impl.view.ViewManagerImpl"/>
  
  <bean id="jcrTransactionManager"
   class="org.springmodules.jcr.jackrabbit.LocalTransactionManager">
     <property name="sessionFactory" ref="sessionFactory"/>
  </bean>
  
  <!-- transaction proxy for Jcr services/facades -->
  <bean id="txProxyTemplate" abstract="true" 
      class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
   <property name="proxyTargetClass" value="true"/>
   <property name="transactionManager" ref="jcrTransactionManager"/>
   <property name="transactionAttributes">
     <props>
        <prop key="*">PROPAGATION_REQUIRED</prop>
        <!-- We can optimize this later -->
        <!-- prop key="*">PROPAGATION_REQUIRED, readOnly</prop  -->
     </props>
   </property>
  </bean>
    
  <bean id="abstractArtifactPlugin" abstract="true">
    <property name="artifactTypeDao" ref="artifactTypeDao"/>
    <property name="viewManager" ref="viewManager"/>
  </bean>
  
  <bean class="org.mule.galaxy.impl.artifact.MuleArtifactPlugin" parent="abstractArtifactPlugin"/>
  <bean class="org.mule.galaxy.impl.artifact.WsdlArtifactPlugin" parent="abstractArtifactPlugin"/>
  <bean class="org.mule.galaxy.impl.artifact.OtherArtifactPlugin" parent="abstractArtifactPlugin"/>
  
</beans>