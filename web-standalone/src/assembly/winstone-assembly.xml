<assembly>
  <id>winstone</id>
  <formats>
    <format>dir</format>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/assembly</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>embedded.properties</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>target/galaxy-web-standalone-${version}.war</source>
      <outputDirectory></outputDirectory>
      <destName>embedded.war</destName>
    </file>
    <file>
      <source>../LICENSE.txt</source>
      <outputDirectory></outputDirectory>
      <destName>galaxy-LICENSE.txt</destName>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib/</outputDirectory>
      <includes>
        <include>log4j:log4j</include>
        <include>commons-logging:commons-logging</include>
        <include>tomcat:jasper-runtime</include>
        <include>tomcat:jasper-compiler</include>
        <include>tomcat:jasper-compiler-jdtcd </include>
        <include>commons-el:commons-el</include>
        <include>org.eclipse.jdt:core</include>
        <include>javax.servlet:jsp-api</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <unpack>true</unpack>
      <outputDirectory></outputDirectory>
      <outputFileNameMapping></outputFileNameMapping>
      <includes>
        <include>net.sourceforge.winstone:winstone</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>